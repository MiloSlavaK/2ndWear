# ===========================================
# 2ndWear Environment Configuration Template
# ===========================================
# Скопируйте этот файл в .env и заполните своими данными

# ----------------- HOST CONFIG -----------------
# Внешний IP или домен вашей VM/сервера
# Для локальной разработки используйте localhost
# Для продакшена - ваш реальный IP или домен
HOST_IP=localhost
BACKEND_PORT=8000
FRONTEND_PORT=5173

# ----------------- TELEGRAM BOT -----------------
# Получите токен от @BotFather
BOT_TOKEN=your_bot_token_here
# Ваш Telegram ID (получите от @userinfobot)
ADMIN_CHAT_ID=your_telegram_id

# ----------------- REDIS -----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ----------------- POSTGRESQL -----------------
POSTGRES_DB=secondwear
POSTGRES_USER=secondwear
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_PORT=5432

# ----------------- MINIO (S3 Storage) -----------------
# Используйте сложные пароли для продакшена!
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_secure_password
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_this_secure_password
MINIO_BUCKET=products
MINIO_SECURE=false
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
